<div id="list_product">
  <% for (var i = 0; i < Users.length; i++) { %>
      <div class="item">
        <div class="div_img">
          <img src="<%= Users[i].img %>" />
        </div>
        <p class="name"><%= Users[i].username %></p>
        <p class="email"><%= Users[i].email %> </p>
        <p class="age">Age: <%= Users[i].age %> </p>
      </div>
    <% } %>
</div>

<div id="navbar">
  <a href="/"><img src="/assets/images/Home.png"></a>
  <a href=""><img src="/assets/images/Search.png"></a>
  <a href="/order"><img src="/assets/images/Shopping Cart.png"></a>
  <a href=""><img src="/assets/images/User.png"></a>
</div>
<style>
  #list_product{
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    column-gap: 10px
  }
  .item{
    text-align: center;
    width: calc(50% - 10px);
  }
  .item .name{
   font-size: 25px;
   color: #999;
  }
  .item .email{
   font-size: 14px;
   color: #3498db;
  }
  .item .age{
   font-size: 16px;
   color: #27ae60;
  }
  .item .div_img{
    margin: 0 auto;
    width:  100px;
    height: 100px;
    border-radius: 50%;
    overflow: hidden;
  }
  .item .div_img .img{
    width:  100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
</style>